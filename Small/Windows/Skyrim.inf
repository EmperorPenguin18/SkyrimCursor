SCHEME_NAME     = "SmallSkyrim"
pointer		= "SNormalSkyrim.cur"
help		= "SHelpSkyrim.cur"
work		= "SWorkingSkyrim.ani"
busy		= "SBusySkyrim.ani"
cross		= "SCrossSkyrim.cur"
