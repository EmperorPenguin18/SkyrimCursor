hand		= "SHandwritingSkyrim.cur"
unavailiable	= "SNopeSkyrim.cur"
vert		= "SRZVerticalSkyrim.cur"
horz		= "SRZHorizontalSkyrim.cur"
dgn1		= "SRZDiagonal1Skyrim.cur"
dgn2		= "SRZDiagonal2Skyrim.cur"
move		= "SMoveSkyrim.cur"
alternate	= "SAlterSkyrim.cur"
